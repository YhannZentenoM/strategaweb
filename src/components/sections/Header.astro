---
import { slider } from "@info";
---

<section>
  <div class="swiper swiper-header">
    <!-- Wrapper adicional requerido -->
    <div class="swiper-wrapper">
      <!-- Los slides -->
      {
        slider.map((slide) => (
          <div class="swiper-slide relative">
            <div class="absolute top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 text-center max-w-2xl">
              <p class="text-white uppercase tracking-widest text-sm mb-4">
                {slide.subtitle}
              </p>
              <h1 class="text-7xl font-semibold text-white mb-4">
                {slide.title}
              </h1>
              <a
                href={`${slide.url}`}
                class="bg-primary text-white font-bold text-sm py-5 px-10 inline-block hover:bg-primary/90 transition-colors duration-500"
              >
                {slide.button}
              </a>
            </div>
            <img
              src={`${slide.image}`}
              alt={`${slide.title}`}
              class="w-full h-full object-cover"
            />
          </div>
        ))
      }
    </div>
    <!-- Si necesitamos botones de navegación -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

<style>
  .swiper-slide {
    height: 100vh;
    overflow: hidden;
  }
  .swiper-button-prev,
  .swiper-button-next {
    background-image: url("/images/arrow.svg");
    background-repeat: no-repeat;
    background-size: 27px auto;
    background-position: center;
    background-color: white;
    width: 60px;
    height: 100px;
  }
  .swiper-button-next::after,
  .swiper-button-prev::after {
    content: "";
  }
  .swiper-button-prev {
    left: 0;
  }
  .swiper-button-next {
    right: 0;
    transform: rotate(180deg);
  }
</style>

<script>
  import Swiper from "swiper";
  import "swiper/css";
  import { Navigation, Autoplay, EffectFade } from "swiper/modules";
  import "swiper/css/effect-fade";
  import "swiper/css/navigation";

  new Swiper(".swiper-header", {
    modules: [Navigation, Autoplay, EffectFade], // definir los módulos a usar
    loop: true, // definir si los slides estarán en bucle
    effect: "fade",
    autoplay: {
      delay: 7000,
    },
    slidesPerView: 1, // agregar número de slides para la pantalla
    navigation: {
      // definir botones next y prev para el módulo Navigation
      prevEl: ".swiper-button-prev",
      nextEl: ".swiper-button-next",
    },
  });
</script>
