---
import Arrow from '@/icons/Arrow.astro'
const { image, title, subtitle, url } = Astro.props
---

<article
  class="bg-no-repeat bg-cover bg-center overflow-hidden w-full relative h-96 group cursor-pointer transition-all duration-500"
  style={`background-image: url('/images/${image}');`}
>
  <div class="bg-gradient-to-t from-black/60 to-transparent group-hover:to-black/50 transition-all duration-500 w-full h-full"></div>
  <div class="text-white flex flex-col gap-3 absolute bottom-0 left-0 w-full p-10 translate-y-8 group-hover:translate-y-0 transition-all duration-500">
    <h3 class="font-bold text-2xl">{title}</h3>
    <p class="font-light text-white/80">{subtitle}</p>
    <a href={`${url}`} class="inline-block opacity-0 group-hover:opacity-100">
        <Arrow class="w-5 rotate-180" />
    </a>
  </div>
</article>
