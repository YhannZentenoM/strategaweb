---
import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";

const { clases, bgInput="bg-white" } = Astro.props;
---
<form action="" class="space-y-6 w-full">
    <div class="relative">
      <input
        type="text"
        class={`border-b border-zinc-400 w-full pl-7 pr-3 py-3 ${bgInput}`}
        placeholder="Nombre"
      />
      <svg
        class="absolute left-0 top-1/2 -translate-y-1/2 w-6"
        viewBox="0 0 24 24"
        fill="none"
        ><g stroke-width="0"></g><g
          stroke-linecap="round"
          stroke-linejoin="round"></g><g>
          <path
            d="M17.5 21.0001H6.5C5.11929 21.0001 4 19.8808 4 18.5001C4 14.4194 10 14.5001 12 14.5001C14 14.5001 20 14.4194 20 18.5001C20 19.8808 18.8807 21.0001 17.5 21.0001Z"
            class="stroke-zinc-400"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
          <path
            d="M12 11C14.2091 11 16 9.20914 16 7C16 4.79086 14.2091 3 12 3C9.79086 3 8 4.79086 8 7C8 9.20914 9.79086 11 12 11Z"
            class="stroke-zinc-400"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </g></svg
      >
    </div>
    <div class="relative">
      <input
        type="text"
        class={`border-b border-zinc-400 w-full pl-7 pr-3 py-3 ${bgInput}`}
        placeholder="TelÃ©fono"
      />
      <Phone class="absolute left-0 top-1/2 -translate-y-1/2 w-5 text-zinc-500" />
    </div>
    <div class="relative">
      <input
        type="text"
        class={`border-b border-zinc-400 w-full pl-7 pr-3 py-3 ${bgInput}`}
        placeholder="Email"
      />
      <Mail class="absolute left-0 top-1/2 -translate-y-1/2 w-5 text-zinc-400" />
    </div>
    <div class="relative">
      <textarea
        class={`border-b border-zinc-400 w-full pl-7 pr-3 py-3 ${bgInput}`}
        rows="4"
        placeholder="Mensaje"></textarea>
      <svg
        class="absolute left-0 top-3 w-6"
        viewBox="0 0 24 24"
        fill="none"
        ><g stroke-width="0"></g><g
          stroke-linecap="round"
          stroke-linejoin="round"></g><g>
          <path
            d="M12.4445 19.6875H20.9445M14.4443 5.68747L5.44587 14.6859C4.78722 15.3446 4.26719 16.1441 4.10888 17.062C3.94903 17.9888 3.89583 19.139 4.44432 19.6875C4.99281 20.236 6.14299 20.1828 7.0698 20.0229C7.98772 19.8646 8.78722 19.3446 9.44587 18.6859L18.4443 9.68747M14.4443 5.68747C14.4443 5.68747 17.4443 2.68747 19.4443 4.68747C21.4443 6.68747 18.4443 9.68747 18.4443 9.68747M14.4443 5.68747L18.4443 9.68747"
            class="stroke-zinc-400"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </g></svg
      >
    </div>
    <div class="flex flex-col md:flex-row items-center gap-5">
      <button
        type="submit"
        class={`bg-primary hover:bg-primary/90 transition-colors duration-300 text-white font-regular-juana tracking-wider ${clases} flex items-center`}
      >
        <svg class="w-5 inline-block" viewBox="0 0 24 24" fill="none"
          ><g stroke-width="0"></g><g
            stroke-linecap="round"
            stroke-linejoin="round"></g><g>
            <path
              d="M10 14L12.2728 19.3032C12.5856 20.0331 13.5586 20.1103 13.9486 19.4185C14.7183 18.0535 15.8591 15.8522 17 13C19 8 20 4 20 4M10 14L4.69678 11.7272C3.96687 11.4144 3.88975 10.4414 4.58149 10.0514C5.94647 9.28173 8.14784 8.14086 11 7C16 5 20 4 20 4M10 14L20 4"
              class="stroke-white"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </g></svg
        >
         Enviar
      </button>
      <a
        href="#"
        target="_blank"
        class={`bg-[#66b75a] text-white font-regular-juana tracking-wider ${clases} flex items-center`}
      >
        <svg
          class="w-5"
          version="1.1"
          viewBox="0 0 418.135 418.135"
          fill="#000000"
          ><g stroke-width="0"></g><g
