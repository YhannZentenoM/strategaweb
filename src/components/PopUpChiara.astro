<div
  id="popup-chiara"
  style="display: none"
  class="popup flex items-center justify-center w-full h-full bg-black/30"
>
  <div
    class="bg-white absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
  >
    <div
      class="popup-content h-[90vh]"
    >
      <span class="close" onclick="closePopupChiara()">
        <svg
          class="w-6 h-6 text-zinc-800 hover:rotate-180 transition-transform duration-300"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m21 21-9-9m0 0L3 3m9 9 9-9m-9 9-9 9"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path></svg
        >
      </span>
      <a href="/chiara" target="_blank" rel="referrer">
          <img src="/images/pop-up-chiara.webp" alt="Acceso a Chiara" class="h-full" />
      </a>
    </div>
  </div>
</div>

<style>
  .popup {
    top: 0;
    position: fixed;
    z-index: 9999;
    animation: fadeIn 0.5s ease-in-out;
  }

  .popup-content {
    position: relative;
  }

  .close {
    position: absolute;
    top: 0;
    right: 0;
    cursor: pointer;
    padding: 10px;
    z-index: 9999;
  }

  .content {
    height: 2000px; /* Para que haya suficiente espacio para hacer scroll */
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
